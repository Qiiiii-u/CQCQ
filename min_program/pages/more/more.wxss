.bord {
  background-color: #fff;
  border-radius: 5px;
  margin-top: 30rpx;
}

.title {
  display: flex;
  align-items: center;
  width: 100%;
  position: relative;
  padding: 10rpx 0;
}

.title-left {
  width: 5px;
  height: 23px;
  background: #7EC4F8;
  display: inline-block;
  margin: 3px 0;
  vertical-align: top;
  margin-right: 10px;
}

.bold {
  font-weight: bold;
}

.title-right {
  position: absolute;
  right: 10px;
}

.menu {
  display: flex;
  flex-direction: row;
  padding: 20rpx;
  position: relative;
}

.menu_left {
  flex: 1;
  align-items: center;
  margin-left: 10rpx;
}

.menu_right {
  position: relative;
  align-items:center;
}

.pai{
  margin-right: 30rpx;
  font-weight: bold;
  font-style: italic;
}

.table {
  width: 95%;
  margin: 10rpx auto;
  background-color: #fff;
  border: 0rpx solid #eff4f8;
  font-size: 12px;
  flex-direction: column;
}

.tr {
  display: flex;
  width: 100%;
  height: 2rem;
}

.td,
.th {
  display: flex;
  justify-content: center;
  /*水平居中 */
  align-items: center;
  /*垂直居中*/
  width: 100%;
  border: 1rpx solid #eff4f8;
  height: 2rem;
  border-bottom: 1px solid #eff4f8;
  border-right: 1px solid #eff4f8;
}

.bg-w {
  background: #b2dffe;
}

canvas{
  height: 100%;
  width: 100%;
}

#mychart-one {
  position: relative;  
  display: block;
}

#mychart-two {
  position: relative;  
  display: block;
}