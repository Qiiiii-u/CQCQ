<view id="{{name}}" class="i-class i-collapse-item ">
	<view class="i-collapse-item-title-wrap" bindtap="trigger" style="vertical-align: middle">
		<text class="i-collapse-item-title i-class-title">{{title}}</text>
		<view class="appear">
			<text class="i-collapse-item-num" style="vertical-align: middle">{{num}}</text>
			<i-icon size="19" type="enter" i-class="{{ showContent ? 'i-collapse-item-arrow-show' : 'i-collapse-item-arrow' }}"  style="vertical-align: middle"/>
		</view>
	</view>
	<view class="i-collapse-item-content {{showContent}}  i-class-content">
		<slot name="content"></slot>
	</view>
</view>