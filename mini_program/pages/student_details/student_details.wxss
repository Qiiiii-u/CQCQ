/* pages/student_details/student_details.wxss */
@import"/colorui/main.wxss";
page{
  background-color: #fff;
}
.scbg {
  width: 100%;
  height: 97%;
  left: 0rpx;
  right: 0rpx;
  top: 0rpx;
  position: absolute;
}

.btn {
  height: 60rpx;
  line-height: 28rpx;
  font-size: small;
  /* font-weight: bold; */
  color: #7AB8FB;
  border-radius: 28rpx;
  box-shadow: 0rpx 4rpx 12rpx 0rpx #ccc;
  /* display: flex; */
  align-items: center;
  justify-content: center;
}

.first {
  margin: auto;
  width: 720rpx;
  height: 140rpx;
  line-height: 40rpx;
  color: rgba(16, 16, 16, 1);
  font-size: 30rpx;
  font-family: Roboto;
  /* border: 2rpx solid rgba(187, 187, 187, 1); */
  
  display: flex
}

.texts {
  margin-left: 1%;
  margin-top: 2%;
  color: #2f3542;
  font-weight: bold;
  font-size: 28rpx;
}

.te{
  display: flex;
  width: 90%;
  height: 40rpx;
  /* padding-top: 1%; */
  margin-top: 2%;
}

.text2{
  margin-left: 1%;
  margin-top: 2%;
  font-size: 28rpx;
}

.one {
  color: red;
}

.second {
  margin: auto;
  width: 720rpx;
  height: 90rpx;
  line-height: 40rpx;
  font-size: 30rpx;
  text-align: left;
  margin-top: 1%;
  box-shadow: 0rpx 4rpx 12rpx 0rpx #ccc;
  background-color: rgba(126, 166, 248, 0.33);
}

.tone {
  text-align: center;
  margin-left: 5%;
  margin-top: 3%;
  width: 40%;
  height: 40rpx;
  color: rgba(16, 16, 16, 1);
  font-size: 30rpx;
  font-family: SourceHanSansSC-regular;
  float: left;
}

.ttwo {
  text-align: center;
  margin-top: 3%;
  width: 50%;
  height: 40rpx;
  color: rgba(16, 16, 16, 1);
  font-size: 30rpx;
  font-family: SourceHanSansSC-regular;
  float: left;
}

.imgs {
  width: 720rpx;
  height: 450rpx;
  margin-left: 2%;
  margin-top: 2%;
  margin-bottom: 2%;
  box-shadow: 0rpx 4rpx 12rpx 0rpx #ccc;
}

.name {
  width: 95%;
  /* margin-top: 10rpx; */
  font-size: 13px;
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: bold;
}

.table {
  width: 95%;
  margin: 10rpx auto;
  background-color: #fff;
  border: 0rpx solid #eff4f8;
  font-size: 12px;
  flex-direction: column;
}

.tr {
  display: flex;
  width: 100%;
  height: 2rem;
}

.td,
.th {
  display: flex;
  justify-content: center;
  /*水平居中 */
  align-items: center;
  /*垂直居中*/
  width: 100%;
  border: 1rpx solid #eff4f8;
  height: 2rem;
  border-bottom: 1px solid #eff4f8;
  border-right: 1px solid #eff4f8;
}

.bg-w {
  background: rgba(126, 166, 248, 0.33);
}

.shadow{
  box-shadow: 0rpx 4rpx 12rpx 0rpx #ccc;
}
