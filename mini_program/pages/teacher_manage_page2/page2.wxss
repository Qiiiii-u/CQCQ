@import "../../colorui/main.wxss";
@import "../../colorui/icon.wxss";

.cu-form-group .title {
  min-width: calc(4em + 30rpx);
}

image {
  width: 55rpx;
  height: 55rpx;
}

.plain-hover {
  position: relative;
  top: 3rpx;
  box-shadow: 0px 0px 10px #7AB8FB inset;
}

.de{
  margin-top: 50rpx;
}

button{
  background-color: #7AB8FB;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
  border: 0;
  margin-top: 20rpx;
}



/* 列表 */
.table {
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  width: 100%;
  margin-top: 40rpx;
  font-size: 10px;
}

.tr {
  display: flex;
  /* justify-content: center;
  align-items: center; */
  width: 100%;
  height: 2rem;
  /* font-weight: normal; */
  font-size: 11.5px;
  /* color: #8a8e94; */
  border-right: 1rpx solid #d0ebff;
  border-left: 1rpx solid #d0ebff;
  border-bottom: 1px solid #edf2ff;
  background: #b2dffe;
}

.td,
.th {
  display: flex;
  justify-content: center;  /*水平居中 */
  align-items: center; /*垂直居中*/
  width: 100%;
  height: 2rem;
  border: 1px solid #eff4f8;
}



thead th {
  position: relative;
}

.table>tbody>tr>td,
.table>tbody>tr>th,
.table>tfoot>tr>td,
.table>tfoot>tr>th,
.table>thead>tr>td,
.table>thead>tr>th {
  white-space: nowrap;
}

.title-new {
  display: flex;
  align-items: center;
  width: 100%;
  position: relative;
  padding: 10rpx 0;
}

.title-left {
  width: 5px;
  height: 23px;
  background: #7EC4F8;
  display: inline-block;
  margin: 3px 0;
  vertical-align: top;
  margin-right: 10px;
}
